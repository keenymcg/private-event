<h1>Edit Event</h1>

<%= form_with(model: @event, url: event_path(@event), method: :patch) do |form| %>
    <%= form.label :name %><br />
    <%= form.text_field :name %>
    <br />
    <%= form.label :date %><br />
    <%= form.date_field :date %>
    <br />
    <%= form.label :location %><br />
    <%= form.text_field :location %>
    <br />
    <%= form.submit "Update Event" %>
<% end %>

<%= link_to 'Back', user_path(current_user) %>